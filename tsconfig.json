{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["DOM", "DOM.Iterable", "ES2015"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noEmit": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    
    "types": ["node"]
  },
  "include": ["src", "playground", "types"]
}
