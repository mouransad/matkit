{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src/lib",
    "outDir": "lib",

    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/lib/components/*"],
      "@icons/*": ["src/lib/icons/*"],
      "@lib/*": ["src/lib/*"]
    },

    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["src/lib", "types"],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ]
}
